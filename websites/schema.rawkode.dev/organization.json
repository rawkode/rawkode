{
  "$id": "https://schema.rawkode.dev/organization",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Organizations pay our bills. Most of the time.",
  "type": "object",
  "required": [
    "name"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of this organization"
    },
    "handles": {
      "type": "object",
      "properties": {
        "twitter": {
          "type": "string",
          "pattern": "^@[a-zA-Z0-9_]{4,15}$"
        },
        "github": {
          "type": "string",
          "pattern": "^@[a-zA-Z0-9_-]{1,39}$"
        },
        "linkedin": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9]{3,100}$"
        }
      }
    }
  }
}
