{
  "$id": "https://schema.rawkode.dev/person",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "A representation of a human being.",
  "type": "object",
  "required": [
    "forename",
    "surname",
    "email"
  ],
  "properties": {
    "forename": {
      "type": "string"
    },
    "surname": {
      "type": "string"
    },
    "email": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      }
    }
  }
}
