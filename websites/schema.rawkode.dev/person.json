{
  "$id": "https://schema.rawkode.dev/person",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "People are awesome. Some of the time.",
  "type": "object",
  "required": [
    "forename",
    "surname"
  ],
  "properties": {
    "forename": {
      "type": "string",
      "description": "The forename of the person"
    },
    "surname": {
      "type": "string",
      "description": "The surname of the person"
    },
    "email": {
      "type": "string",
      "description": "The email address this person prefers and doesn't mind being public"
    },
    "employers": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "socials": {
      "anyOf": [
        {
          "type": {
            "$ref": "https://schema.rawkode.dev/social/github"
          }
        },
        {
          "type": {
            "$ref": "https://schema.rawkode.dev/social/linkedin"
          }
        },
        {
          "type": {
            "$ref": "https://schema.rawkode.dev/social/twitter"
          }
        }
      ]
    }
  }
}
