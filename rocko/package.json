{
  "name": "rocko",
  "version": "0.1.0",
  "description": "A portable, extensible PLAN → BUILD → REVIEW agent for any repo",
  "module": "src/index.ts",
  "type": "module",
  "bin": {
    "rocko": "./src/cli.ts"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "scripts": {
    "dev": "bun --hot src/cli.ts",
    "build": "bun build src/cli.ts --outdir dist --target bun",
    "test": "bun test",
    "typecheck": "bunx tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.14",
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.8",
    "xstate": "^5.19.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5",
    "@zed-industries/claude-code-acp": "*",
    "@zed-industries/codex-acp": ""
  },
  "peerDependenciesMeta": {
    "@zed-industries/claude-code-acp": {
      "optional": true
    },
    "@zed-industries/codex-acp": {
      "optional": true
    }
  }
}
