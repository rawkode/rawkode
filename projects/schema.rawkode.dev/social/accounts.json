{
  "$id": "https://schema.rawkode.dev/social/github",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Represents a map of social accounts",
  "type": "object",
  "properties": {
    "github": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]{1,39}$"
    },
    "linkedin": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9]{3,100}$"
    },
    "twitter": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_]{4,15}$"
    }
  }
}
