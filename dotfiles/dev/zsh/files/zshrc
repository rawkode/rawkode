[[ -f ${HOME}/Code/src/github.com/marlonrichert/zsh-snap/znap.zsh ]] ||
    (mkdir -p ${HOME}/Code/src/github.com/marlonrichert/zsh-snap && \
    git clone --depth 1 -- \
        https://github.com/marlonrichert/zsh-snap.git ${HOME}/Code/src/github.com/marlonrichert/zsh-snap)

source ${HOME}/Code/src/github.com/marlonrichert/zsh-snap/znap.zsh

znap eval iterm2 'curl -fsSL https://iterm2.com/shell_integration/zsh'

znap prompt romkatv/powerlevel10k

##
# Paths
#
# In zsh, the $PATH variable is tied to the $path variable.
# This makes the $path variable act like a set.
typeset -U path

##
# My zsh includes
for file in ~/.zsh/includes/*; do
    source "$file"
done

export SSH_AUTH_SOCK=~/Library/Group\ Containers/2BUA8C4S2C.com.1password/t/agent.sock

eval "$(direnv hook zsh)"

export PATH="${PATH}:/opt/homebrew/bin:${HOME}/.krew/bin"

source "/opt/homebrew/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/path.zsh.inc"

add-zsh-hook -Uz chpwd(){ source <(tea -Eds) }  #tea


if [ -e '/nix/var/nix/profiles/default/etc/profile.d/nix-daemon.sh' ]; then
  . '/nix/var/nix/profiles/default/etc/profile.d/nix-daemon.sh'
fi

export HOMEBREW_NO_AUTO_UPDATE=1

# bun completions
[ -s "/Users/rawkode/.bun/_bun" ] && source "/Users/rawkode/.bun/_bun"

# bun
export BUN_INSTALL="$HOME/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"

export PATH="/opt//homebrew/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/bin:$PATH"

